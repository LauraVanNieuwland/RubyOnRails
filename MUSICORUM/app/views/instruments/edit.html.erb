 <%= form_for(@instrument) do |f| %>
  <%= f.label :instrument_name, class: "create" %>
  <%= f.text_field :instrument_name %>
  <%= f.label :image, class: "create" %>
   <%= f.file_field :file %>
  <%= f.label :description, class: "create" %>
  <%= f.text_field :description %>
   <%= f.label :price, class: "create" %>
  <%= f.text_field :price %>
   <%= f.label :location, class: "create" %>
  <%= f.text_field :location %>
  <%= f.submit "Submit", class: "btn btn-flat" %>
<% end %>
