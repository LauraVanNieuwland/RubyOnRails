      <br>
      <%= simple_form_for [ @instrument ] do |f| %>
        <%= f.input :instrument_name, label: "Instument name:" %>
        <%= f.input :description, label: "Description:" %>
        <%= f.input :price, label: "Price per day (â‚¬):" %>
        <%= f.input :location, label: "Location:" %>
